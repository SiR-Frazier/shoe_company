<h1>Shoe Stores</h1>

<div class="well">
  <% if @stores.any?() %>
  <h2>Participating stores: </h2>

  <ul>
    <% @stores.each() do |store| %>
      <li><a href="/stores/<%= store.id() %>/edit"><%=store.name()%></a></li>
    <% end %>
  </ul>

  <% else %>

  <h2>Currently, there aren't any businesses.</h2>

  <% end %>
</div>

<div class="well">
  <form action="/stores" method="post">
    <input type="text" name="name" placeholder="Add Store">
    <br>
    <br>
    <button type="submit" class="btn btn-primary">Update</button>
  </form>
</div>
