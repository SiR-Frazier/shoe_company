<h1>Participating Brands</h1>

<div class="well">
  <% if @shoes.any?() %>
  <h2>Here are the participating brands: </h2>

  <ul>
    <% @shoes.each() do |shoe| %>
      <li><a href="/shoes/<%=shoe.id()%>"><%= shoe.brand %> <%= shoe.price %></a></li>
    <% end %>
  </ul>

  <% else %>

  <h2>Currently, there aren't any. Please check back soon.</h2>

  <% end %>
</div>

<div class="well">
  <form action="/shoes" method="post">
    <label for="brand">Brand:</label>
    <input type="text" name="brand" placeholder="Add Brand">
    <label for="price">Price</label>
    <input type="text" name="price" placeholder="$">
    <br>
    <br>
    <button type="submit" class="btn btn-primary">Update</button>
  </form>
</div>
